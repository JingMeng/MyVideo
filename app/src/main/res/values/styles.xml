<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- 导航栏颜色 -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- 状态颜色 5.0之后有效 -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- 字体与控件选中颜色 -->
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/bg_color</item>

        <!-- 页面切换时不黑白屏 -->
        <item name="android:windowIsTranslucent">false</item>

        <!-- 隐藏掉actionbar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:windowActionBar">false</item>
    </style>

    <!-- 优化回退 -->
    <style name="SwipeBackLayout">
        <item name="edge_size">50dip</item>
        <item name="shadow_left">@drawable/shadow_left</item>
        <item name="shadow_right">@drawable/shadow_right</item>
        <item name="shadow_bottom">@drawable/shadow_bottom</item>
    </style>

    <style name="title_bar_style">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:paddingLeft">0.0dip</item>
        <item name="android:paddingRight">0.0dip</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/title_bar_height</item>
    </style>

    <style name="title_text_style">
        <item name="android:textSize">@dimen/font16</item>
        <item name="android:textColor">@color/color_000000</item>
    </style>

    <style name="title_bar_button">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/color_000000</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@null</item>
        <item name="android:paddingLeft">5.0dip</item>
        <item name="android:paddingRight">5.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">0.0dip</item>
        <item name="android:layout_marginRight">10.0dip</item>
    </style>

    <style name="DialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>
